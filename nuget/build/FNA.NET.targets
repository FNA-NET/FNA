<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="BeforeCompile">
        <ItemGroup>
            <BindingResources Include="$(MSBuildThisFileDirectory)../content/res/**/*.*" />
        </ItemGroup>
        <Copy SourceFiles="@(BindingResources)" DestinationFolder="$(IntermediateOutputPath)/FNA.NET/%(RecursiveDir)" ContinueOnError="false" />
        <ItemGroup Condition="'$(TargetFramework)' == 'net6.0-ios'">
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/TwilioVideo.xcframework">
                <Kind>Framework</Kind>
                <SmartLink>False</SmartLink>
            </NativeReference>

            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/FAudio.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
                <Frameworks>AVFoundation AudioToolbox CoreGraphics Metal QuartzCore OpenGLES GameController CoreMotion MobileCoreServices ImageIO CoreHaptics CoreBluetooth</Frameworks>
            </NativeReference>
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/FNA3D.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
            </NativeReference>
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/SDL2.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
            </NativeReference>
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/theorafile.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
            </NativeReference>
        </ItemGroup>

        <ItemGroup Condition="'$(TargetFramework)' == 'net6.0-tvos'">
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/TwilioVideo.xcframework">
                <Kind>Framework</Kind>
                <SmartLink>False</SmartLink>
            </NativeReference>

            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/FAudio.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
                <Frameworks>AVFoundation AudioToolbox CoreGraphics Metal QuartzCore OpenGLES GameController CoreBluetooth MobileCoreServices ImageIO</Frameworks>
            </NativeReference>
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/FNA3D.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
            </NativeReference>
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/SDL2.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
            </NativeReference>
            <NativeReference Include="$(IntermediateOutputPath)/FNA.NET/theorafile.xcframework">
                <Kind>Static</Kind>
                <SmartLink>False</SmartLink>
                <ForceLoad>True</ForceLoad>
            </NativeReference>
        </ItemGroup>
    </Target>
</Project>
